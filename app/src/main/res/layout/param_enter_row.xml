<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_margin="6dp"
        android:backgroundTint="@color/color_param_card"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        android:background="@drawable/ic_no_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/input_param_layer"
            android:orientation="horizontal"
            android:weightSum="100"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_param_name"
                android:text=""
                android:layout_weight="35"
                android:maxLines="1"
                android:textSize="@dimen/param_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_param_value"
                android:text=""
                android:maxLines="1"
                android:textAlignment="textEnd"
                android:paddingEnd="4dp"
                android:inputType="numberDecimal"
                android:layout_weight="35"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_param_unit"
                android:text=""
                android:maxLines="1"
                android:textSize="@dimen/param_text_size"
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>