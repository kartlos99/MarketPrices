<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="#ddeeff"
    android:elevation="4dp"
    android:minHeight="80dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_real_prod"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_no_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="wewewew"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/img_real_prod"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_prod_params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:text="wewewew"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/img_real_prod"
        app:layout_constraintTop_toBottomOf="@id/tv_prod_name" />

    <TextView
        android:id="@+id/tv_lari_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/dark_green"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="â‚¾"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_prod_price"/>

    <TextView
        android:id="@+id/tv_prod_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="4.35"
        android:textColor="@color/dark_green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_lari_sign"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rproduct_date"
        android:text="2018/12/09"
        android:textSize="10sp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/tv_prod_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_market_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingBottom="4dp"
        android:text="market"
        app:layout_constraintStart_toEndOf="@id/img_real_prod"
        app:layout_constraintTop_toBottomOf="@id/tv_prod_params" />

    <ImageView
        android:id="@+id/img_add_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_add_shopping_24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="@dimen/mini_icon_size"
        android:layout_height="@dimen/mini_icon_size" />

    <ImageView
        android:id="@+id/img_open_bs"
        android:src="@drawable/three_dots_menu"
        android:layout_marginEnd="8dp"
        android:tint="#777"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/mini_icon_size"
        android:layout_height="@dimen/mini_icon_size" />


</androidx.constraintlayout.widget.ConstraintLayout>